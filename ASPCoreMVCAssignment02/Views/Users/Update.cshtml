@model ApplicationUser

@{
    ViewData["Title"] = "Edit";
}

<h1>Update User</h1>

<br />
<br />

<form asp-action="Edit" asp-controller="Users">
    <input hidden asp-for="Id" />

    <div class="form-group">
        <label class="col-form-label" asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section ValidationScriptSection {

    <partial name="_ValidationScriptsPartial" />
}