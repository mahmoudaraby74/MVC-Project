@model IEnumerable<ApplicationUser>


@{
    ViewData["Title"] = "Index";

}
<h1>All Users</h1>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Users">
      <div class="row">
            <div class="col-sm-8">
            <input class="form-control" name="SearchValue" placeholder="Search By Email" />
            </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
      </div>
</form>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.UserName)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.IsAgree)</td>


                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => user.Id)</td>
                    <td>@Html.DisplayFor(M => user.Email)</td>
                    <td>@Html.DisplayFor(M => user.UserName)</td>
                    <td>@Html.DisplayFor(M => user.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M => user.IsAgree)</td>



                    <partial name="_ButtonsViewPartial" model="@user.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>No Users Found!!</h3>
    </div>
}

