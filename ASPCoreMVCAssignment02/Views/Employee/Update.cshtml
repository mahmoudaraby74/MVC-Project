@model EmployeeViewModel
@inject IDepartmentRepository deptRepo
@{
    ViewData["Title"] = "Edit";
    var Departments = new SelectList(deptRepo.GetALL().Result, "Id", "Name");
}

<h1>Update Employee </h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Employee" enctype="multipart/form-data">
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Age" class="col-form-label"></label>
                <input asp-for="@Model.Age" class="form-control" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Address" class="col-form-label"></label>
                <input asp-for="@Model.Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Salary" class="col-form-label"></label>
                <input asp-for="@Model.Salary" class="form-control" />
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DepartmentId" class="col-form-label"></label>
                <select asp-for="@Model.DepartmentId" asp-items="Departments" class="form-control">
                    <option>--- Select Department ---</option>
                </select>
                <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HireDate" class="col-form-label"></label>
                <input asp-for="@Model.HireDate" class="form-control" />
                <span asp-validation-for="@Model.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image" class="col-form-label"></label>
                <input type="file" asp-for="@Model.Image" class="form-control" />

            </div>
            <div class="form-group form-check">
                <input class=" form-check-input" type="checkbox" asp-for="@Model.IsActive">

                <label class="form-check-label" asp-for="@Model.IsActive"></label>

            </div>
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class=" btn btn-light">Back To List</a>


        </form>
    </div>
</div>

@section Scripts {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

